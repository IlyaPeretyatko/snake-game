      <TextField fx:id="nameTextField"/>
   </HBox>
   <Button onMouseClicked="#newGameButtonClicked" mnemonicParsing="false" prefWidth="120.0"
           text="New Game">
      <font>
         <Font size="16.0"/>
      </font>
   </Button>
   <Button onMouseClicked="#connectButtonClicked" mnemonicParsing="false" prefWidth="120.0"
           text="Connect">
      <font>
         <Font size="16.0"/>
      </font>
   </Button>
   <Button onMouseClicked="#exitButtonClicked" mnemonicParsing="false" prefWidth="120.0" text="Exit">
      <font>
         <Font size="16.0"/>
      </font>
   </Button>
</VBox>
